<div class="banner" style="background-image: url(<%=@url %>);"></div>
<div class="container mt-3">
  <div class="row">
    <div class="col-8">
      <div class="card p-3 mb-3">
        <h1><%= @flat.name %></h1>
        <p><%= @flat.address %></p>
      </div>
      <div class="card p-3">
        <h3>A bit more about this flat...</h3>
        <p><%= @flat.description %></p>
      </div>      
    </div>
    <div class="col-4">
      <div class="card p-3 mb-3">
        <h5>Book this place!</h5>
        <form action="">
          <div class="input-group">
            <span class="input-group-addon" id="basic-addon1">From:</span>
            <input type="text" class="form-control" placeholder="12/10/2017" aria-label="Username" aria-describedby="basic-addon1">
          </div>
          <div class="input-group mt-2">
            <span class="input-group-addon" id="basic-addon1">To:</span>
            <input type="text" class="form-control" placeholder="18/10/2017" aria-label="Username" aria-describedby="basic-addon1">
          </div>
          <input type="submit" value="Book" class="btn btn-success mt-2" style="width: 100%">
        </form>
      </div>
      <div class="card p-3 mb-3">
        <h3>Details</h3>
        <div class="d-flex">
          <p class="mr-2"><i class="fas fa-user-friends"></i> <%= @flat.number_of_guests %></p>
          <p><i class="fas fa-euro-sign"></i> <%= @flat.price_per_night %></p>
        </div>
      </div>
    </div>
  </div>
</div>